<UserControl x:Class="SimpleNote.Controls.VstPluginPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="100">
    <Border Background="#FF333333" CornerRadius="5" Padding="5">
        <StackPanel>
            <TextBlock x:Name="PluginNameText" Foreground="White"/>
            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.7"
                    Margin="0,5,0,0"/>
            <Button Content="Remove" Click="Remove_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</UserControl>