<UserControl x:Class="SimpleNote.Controls.MixerChannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="100">
    <Border Background="#FF444444" CornerRadius="3" Padding="5">
        <StackPanel>
            <TextBlock Text="{Binding ChannelName}" Foreground="White" HorizontalAlignment="Center"/>
            <Slider Minimum="0" Maximum="1" Value="0.7" Orientation="Vertical" Height="60"
                    ValueChanged="Volume_Changed"/>
            <CheckBox Content="Mute" Foreground="White" Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</UserControl>